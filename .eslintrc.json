{
    "env": {
        "browser": true,
        "es2021": true,
        "mocha": true,
        "jest": true
    },
    "extends": [
        "standard",
        "plugin:codeceptjs/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-unused-vars": ["error", 
            { "vars": "all", "args": "after-used",
                 "ignoreRestSiblings": false }]
    }
}
